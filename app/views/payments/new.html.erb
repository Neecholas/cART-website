<div class="background-commission order-background" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 50%), url('https://ohsooclean.com/wp-content/uploads/2018/06/testimonials.jpg');">
  <div class="container">
    <div class="com-container">
      <div class= "com-card">
        <h3>Your Order</h3>
        <div class="order-subheading">
          <h4 class="">Your Commission: <%= @order.request.commission.title %></h4>
          <p><%= @order.request.commission.description %></p>

          <h4 class="">Your Artist: <%= "#{@order.request.user.first_name} #{@order.request.user.last_name}"%></h4>
          <p><%= @order.request.description %></p>

          <div class="order-btn">
            <div>
              <h4>Amount</h4>
              <p><%= humanized_money_with_symbol(@order.amount) %></p>
            </div>
            <% @order.request_sku %>
            <%= form_tag order_payments_path(@order) do %>
              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-name="My Request"
                data-email="<%= current_user.email %>"
                data-description="Request <%= @order.request_sku %>"
                data-amount="<%= @order.amount_cents %>"
                data-currency="<%= @order.amount.currency %>"></script>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

