
<div class="order-container"></div>

  <h3>Your Order</h3>
  <h5>Your Commission: <%= @order.request.commission.title %></h5>
  <p><%= @order.request.commission.description %></p>

  <h5>Your Artist: <%= "#{@order.request.user.first_name} #{@order.request.user.last_name}"%></</h5>
  <p><%= @order.request.description %></p>

  <h5>Amount</h5>
  <p><%= humanized_money_with_symbol(@order.amount) %></p>

  <% @order.request_sku %>
  <%= form_tag order_payments_path(@order) do %>
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-name="My Request"
      data-email="<%= current_user.email %>"
      data-description="Request <%= @order.request_sku %>"
      data-amount="<%= @order.amount_cents %>"
      data-currency="<%= @order.amount.currency %>"></script>
  <% end %>

</div>
