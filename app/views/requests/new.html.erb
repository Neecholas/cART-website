<div class="background-commission" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 50%), url('https://ohsooclean.com/wp-content/uploads/2018/06/testimonials.jpg');">
  <div class="container">

    <div class="com-container">
      <div class="com-width">
        <h3>Make an offer</h3>
        <%= simple_form_for [@commission, @request] do |f| %>
          <%= f.input :description, required: false, class: "com-title" %>
          <%= f.input :price_cents, label: "Price", class: "com-title", placeholder: "Amount..." %>
          <div class="p-s sub-btn-margin btn-margin-left">
              <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>




