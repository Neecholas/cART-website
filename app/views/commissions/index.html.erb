<div class="" style="background-image:url('com-index.jpg');">


<div class="artist-search-container">
  <div class="artist-search-icon">
    <h5 class="fas fa-search"></h5>
  </div>
  <div class="artist-border">
    <%= form_tag commissions_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control artist-search",
      placeholder: "Find a commission"
  %>
  <% end %>
  </div>
</div>

<div class="container artist-container">
    <div class="row">
      <div class="col-xs-12 col-sm-7">
        <div class="artist-column commission-column">
          <% @commissions.select{ |commission| commission.id.even?}.each do |commission| %>
              <div class="com-index-card">
                <%= link_to commission_path(commission) do  %>
                  <div class="com-link"></div>
                  <div class="com-content">
                    <% if commission.amount %>
                      <div class="com-title">
                        <h5><%= commission.title %></h5>
                        <h5>£<%= commission.amount %></h5>
                      </div>
                        <p><%= commission.description %></p>
                      <% else %>
                        <h5><%= commission.title %></h5>
                        <p><%= commission.description %></p>
                      <% end %>
                  </div>
                <% end %>
              </div>
              <!-- <div class="card-break"><i class="fas fa-angle-double-down"></i></div> -->
          <% end %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-5">
         <div class="artist-column commission-column">
           <% @commissions.select{|commission| commission.id.odd?}.each do |commission| %>
              <div class="com-index-card com-card-right">
                <%= link_to commission_path(commission) do  %>
                  <div class="com-link"></div>
                  <div class="com-content">
                    <% if commission.amount %>
                      <div class="com-title">
                        <h5><%= commission.title %></h5>
                        <h5>£<%= commission.amount %></h5>
                      </div>
                        <p><%= commission.description %></p>
                      <% else %>
                        <h5><%= commission.title %></h5>
                        <p><%= commission.description %></p>
                      <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
