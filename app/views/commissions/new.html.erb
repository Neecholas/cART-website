
<div class="background com-card-background" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 50%), url('https://ohsooclean.com/wp-content/uploads/2018/06/testimonials.jpg');">
  <div class="container">

    <div class="com-container">
      <div class="com-card">
        <div>
          <h3>Your commission:</h3>
        </div>
        <%= simple_form_for @commission do |f| %>
        <div>
            <%= f.input :title, required: false,
            class: "com-title",
            placeholder: "Title..." %>
        </div>
        <div>
            <%= f.input :description,
            class: "com-desription",
            placeholder: "Description..." %>
        </div>
        <div>
            <%= f.input :amount,
            class: "com-amount",
            placeholder: "Your budget (e.g. Â£300)..." %>
        </div>
        <div class="p-s">
          <div>
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
          </div>
          <div class="sub-btn">
            <%= f.button :submit,
            "Submit" %>
          </div>
        </div>


        <% end %>
      </div>
    </div>
  </div>
</div>
