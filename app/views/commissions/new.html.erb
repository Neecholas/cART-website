
<div class="background" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 50%), url('https://images.unsplash.com/photo-1503289130890-6eff9c5df553?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=7d4ed6009e8a0e8b6948ebe612d5827f&auto=format&fit=crop&w=1050&q=80');">
  <div class="container">

    <div class="com-container">
      <div class="com-card">
        <div>
          <h3>Your commission:</h3>
        </div>
        <%= simple_form_for @commission do |f| %>
        <div>
            <%= f.input :title, required: false,
            class: "com-title",
            placeholder: "Title..." %>
        </div>
        <div>
            <%= f.input :description,
            class: "com-desription",
            placeholder: "Description..." %>
        </div>
        <div>
            <%= f.input :amount,
            class: "com-amount",
            placeholder: "Your budget (e.g. Â£300)..." %>
        </div>
        <div class="p-s">
          <div>
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
          </div>
          <div class="sub-btn">
            <%= f.button :submit,
            "Submit" %>
          </div>
        </div>


        <% end %>
      </div>
    </div>
  </div>
</div>
